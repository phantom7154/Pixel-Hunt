{
  "manifest_version": 3,
  "name": "Pixel Pursuit",
  "version": "2.0.0",
  "description": "Multiplayer reflex game with AI-evasive pixel and real-time leaderboard.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["scripting", "storage", "tabs"],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["<all_urls>"],
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
