{
  "manifest_version": 3,
  "name": "Pixel Pursuit",
  "version": "2.0.1",
  "description": "Reflex game with AI-evasion, game modes, and local stats tracking.",
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": ["storage", "scripting", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*.png"],
      "matches": ["<all_urls>"]
    }
  ]
}
